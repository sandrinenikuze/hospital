<div class="container-fluid">
  <div class="row">
    <div class="col-md-8">
      <div class="col-md-12">
        
        <div ng-app="app">
          <div ng-controller="servicesCtrl" ng-init="setup()">
            <div class="container">
                <div class="row">
                  <div class="table-responsive">
                    <table class="table table-hover">
                      <thead>
                        <tr>
                          <th class="info">#</th>
                          <th class="info">Name</th>
                          <th class="info">Description</th>
                        </tr>
                      </thead>
                      <tbody id="myTable">
                        <tr ng-repeat="service in services">
                          <td class="active">{{service.id}}</td>
                          <td class="danger">{{service.name}}</td>
                          <td class="success">{{service.description}}</td>
                        </tr>
                      </tbody>
                    </table>   
                  </div>
                  <div class="col-md-12 text-center">
                  <ul class="pagination pagination-lg pager" id="myPager"></ul>
                  </div>
              </div>
            </div>
            <div>
              <strong><h4>Add Service</h4></strong>
              Name: <input ng-model="serviceName">
              Description: <input ng-model="serviceDescription">
              <button ng-click="addService(serviceName, serviceDescription)">Add Service</button>
              <button> <%=link_to "Back to Dashboarb", "/dashboards", method: :get %></button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
    
    
    